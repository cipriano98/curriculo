datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

// * models
model Profile {
  id        Int      @default(autoincrement()) @id
  key       String   @default(uuid())
  bio       String?
  pseudonym String?
  User      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  createdat DateTime @default(now())
  updatedat DateTime @updatedAt
}

model User {
  id         Int      @default(autoincrement()) @id
  key        String   @default(uuid())
  email      String   @unique
  cpf        String   @unique
  pass       String
  firstname  String
  middlename String?
  lastname   String
  nickname   String?
  role       Role     @default(CANDIDATE)
  Profile    Profile?
  createdat  DateTime @default(now())
  updatedat  DateTime @updatedAt
}

enum Role {
  USER
  CANDIDATE
  EMPLOYER
  ADMIN
}
