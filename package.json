{
    "name": "curriculo-unico",
    "version": "0.01.0",
    "description": "Com um único cadastro seu currículo está em todas as plataformas",
    "author": {
        "name": "Natan Cipriano",
        "email": "natancipriano98@gmail.com"
    },
    "main": "dist/main.js",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/cipriano98/curriculo.git"
    },
    "license": "MIT",
    "scripts": {
        "rm-dist": "rimraf dist",
        "rm-nm": "rimraf node_modules",
        "rm": "rimraf",
        "rm-dnm": "yarn rm-dist && yarn rm-nm",
        "build": "tsc",
        "start": "yarn install && node dist/main.js",
        "serve": "nest build && nest start",
        "ts-dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/main.ts --ignore tests",
        "dev": "nodemon",
        "hot": "nest build --webpack --webpackPath hot-reload.config.js",
        "doc": "compodoc -p tsconfig.json -s -w --language pt-BR --theme stripe -n \"Currículo Único Documentation\" -o --port 3030",
        "debug": "nest build && nest start --debug --watch",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "save": "prisma migrate save --create-db --experimental",
        "up": "prisma migrate up --experimental --verbose",
        "generate": "prisma generate",
        "studio": "prisma studio",
        "prisma": "yarn save && yarn up && yarn generate",
        "init-app": "yarn prisma && yarn serve",
        "renew-app": "yarn rm-dnm && yarn init-app"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.0",
        "@nestjs/config": "^0.5.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/jwt": "^7.1.0",
        "@nestjs/passport": "^7.1.0",
        "@nestjs/platform-express": "^7.0.0",
        "@nestjs/terminus": "^7.0.1",
        "@nestjsplus/redirect": "^1.0.0",
        "@prisma/client": "^2.9.0",
        "bcrypt": "^5.0.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "cookie-parser": "^1.4.5",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4"
    },
    "devDependencies": {
        "@compodoc/compodoc": "^1.1.11",
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@prisma/cli": "^2.9.0",
        "@types/bcrypt": "^3.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.8",
        "@types/jest": "26.0.10",
        "@types/node": "^13.9.1",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "3.9.1",
        "@typescript-eslint/parser": "3.9.1",
        "eslint": "7.7.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "jest": "26.4.2",
        "nodemon": "^2.0.5",
        "prettier": "^1.19.1",
        "start-server-webpack-plugin": "^2.2.5",
        "supertest": "^4.0.2",
        "ts-jest": "26.2.0",
        "ts-loader": "^6.2.1",
        "ts-node": "9.0.0",
        "ts-node-dev": "^1.0.0-pre.63",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.7.4",
        "webpack-node-externals": "^2.5.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
